[commit]
    gpgsign = true
[push]
    default = current
[core]
    editor = nvim
[alias]
    lol = log --pretty=oneline --abbrev-commit --graph
    lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
        undo = reset HEAD^
    st = status
    com = commit -m
    flpush = push --force-with-lease
    fixup = commit --fixup